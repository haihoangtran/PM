<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/existed_word_error_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/existed_word_error_dialog_title"
        android:textColor="@color/dialogErrorColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/existed_word_error_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        tools:text="@string/existed_word_error_dialog_message" />

    <Button
        android:id="@+id/existed_word_error_dialog_ok_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/transparentColor"
        android:text="@string/ok"
        android:textColor="@color/confirmButtonColor"
        android:textStyle="bold" />
</LinearLayout>